{
  "imports": {
    "express": "npm:/express@4.18.2",
    "deno/": "https://deno.land/std@0.206.0/",
    "drizzle-orm/": "npm:/drizzle-orm@0.29.0/"
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["drizzle.config.ts"]
  },
  "tasks": {
    "dev": "deno run -A --watch src/main.ts",
    "migration:gen": "pnpm exec drizzle-kit introspect:mysql",
    "migration:run": "pnpm exec drizzle-kit push:mysql"
  }
}
